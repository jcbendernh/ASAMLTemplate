{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
    "contentVersion": "1.2.2.0",
    "parameters": {
        "streamAnalyticsJobName": {
            "minLength": 3,
            "maxLength": 63,
            "type": "String",
            "metadata": {
                "description": "Stream Analytics Job Name, can contain alphanumeric characters and hypen and must be 3-63 characters long"
            }
        },
        "numberOfStreamingUnits": {
            "allowedValues": [
                1,
                3,
                6,
                12,
                18,
                24,
                30,
                36,
                42,
                48
            ],
            "minValue": 1,
            "maxValue": 48,
            "type": "Int",
            "metadata": {
                "description": "Number of Streaming Units"
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.StreamAnalytics/StreamingJobs",
            "name": "[parameters('streamAnalyticsJobName')]",
            "apiVersion": "2016-03-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "sku": {
                    "name": "standard"
                },
                "outputErrorPolicy": "stop",
                "eventsOutOfOrderPolicy": "adjust",
                "eventsOutOfOrderMaxDelayInSeconds": 0,
                "eventsLateArrivalMaxDelayInSeconds": 5,
                "dataLocale": "en-US",
                "jobType": "Cloud",
                "inputs": [
                    {
                        "properties": {
                          "type": "Stream",
                          "datasource": {
                            "type": "Microsoft.Devices/IotHubs",
                            "properties": {
                              "iotHubNamespace": "cfs365rmd5356",
                              "sharedAccessPolicyName": "iothubowner",
                              "sharedAccessPolicyKey": "yBc7eRGMhLbOAXCvtE6/rI1bFKXOAhrGYcwisNu16ms=",
                              "consumerGroupName": "anomalycg",
                              "endpoint": "messages/events"
                            }
                          },
                          "serialization": {
                            "type": "Json",
                            "properties": {
                              "encoding": "UTF8"
                            }
                          },
                        },
                        "name": "IoTStream",
                        "type": "Microsoft.StreamAnalytics/streamingjobs/inputs"
                      }
                ],
                "outputs": [
                    {
                      "properties": {
                        "datasource": {
                          "type": "Microsoft.Storage/Blob",
                          "properties": {
                            "storageAccounts": [
                              {
                                "accountName": "cfs365rm"
                              }
                            ],
                            "container": "testoutput",
                            "pathPattern": "",
                            "dateFormat": "yyyy/MM/dd",
                            "timeFormat": "HH"
                          }
                        },
                        "serialization": {
                          "type": "Csv",
                          "properties": {
                            "fieldDelimiter": ",",
                            "encoding": "UTF8"
                          }
                        },
                      },
                      "name": "testoutput",
                      "type": "Microsoft.StreamAnalytics/streamingjobs/outputs"
                    }
                  ],
                  "transformation": {
                    "name": "Transformation",
                    "properties": {
                        "streamingUnits": "[parameters('numberOfStreamingUnits')]",
                        "query": "SELECT\r\n    *\r\nINTO\r\n    [YourOutputAlias]\r\nFROM\r\n    [YourInputAlias]"
                    }
                }
            }
        }
    ]
}